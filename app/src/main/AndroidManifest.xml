<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="devicroft.burnboy">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />


        <!-- start activity initialises things, with logo splash -->
        <activity
            android:name=".Activities.StartActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity"></activity>
        <activity
            android:name=".Activities.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity android:name=".Activities.HistoryActivity"></activity>

        <provider
            android:name=".Data.MovementLogContentProvider"
            android:authorities="devicroft.burnboy.Data.MovementLogContentProvider"
            android:exported="true"
            android:multiprocess="true" />

        <service android:description="@string/service_movement_tracking_description"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/icon_run"
            android:label="@string/service_movement_tracking_label"
            android:name=".Services.MovementTrackingService"
            >
         </service>

        <service android:description="@string/service_movement_tracking_description"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/icon_run"
            android:label="@string/service_movement_tracking_label"
            android:name=".Services.LogService"
            >
        </service>

        <receiver
            android:name=".Receivers.ActivityTrackingBroadcastReceiver" >
            <intent-filter android:priority="4" >
                <action android:name=".Receivers.ActivityTrackingBroadcastReceiver" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".Receivers.NotificationCancelReceiver" >
            <intent-filter android:priority="999" >
                <action android:name=".Receivers.NotificationCancelReceiver" />
            </intent-filter>
        </receiver>
    </application>

</manifest>